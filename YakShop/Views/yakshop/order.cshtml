
@{
	ViewBag.Title = "order";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">ONLINE ORDER FORM</h1>
	</div>
	<!-- /.col-lg-12 -->
</div>
<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="panel panel-default">
			<div class="panel-body">
				@using (Html.BeginForm("orderonline", "yakshop", FormMethod.Post))
				{
					<div class="form-group">
						<label>Elaps Time in days</label>
						@Html.TextBox("T", "", new { type = "text", Class = "form-control" })
					</div>
					<div class="form-group">
						<label>Customer Name</label>
						@Html.TextBox("customer", "", new { type = "text", Class = "form-control" })
					</div>
					<div class="form-group">
						<label>Milk Required</label>
						@Html.TextBox("milk", "", new { type = "text", Class = "form-control" })
					</div>
					<div class="form-group">
						<label>Skins Required</label>
						@Html.TextBox("skins", "", new { type = "text", Class = "form-control" })
					</div>
					<div class="form-group">
						<input type="submit" value="Place Order" class="btn btn-primary" />
					</div>
				}
			</div>
		</div>
	</div>
</div>
@if (ViewBag.Message != null)
{
	<h3>Order Status</h3>
	<table>
		<tr>
			<td>Milk</td>
			<td>@ViewBag.Message.milk</td>
		</tr>
		<tr>
			<td>Skins</td>
			<td>@ViewBag.Message.skins</td>
		</tr>
	</table>
}
else
{
	<h4>@ViewBag.Message</h4>
}


